{
  "name": "system-cleaner",
  "version": "1.0.0",
  "description": "A beautiful cross-platform desktop app for safely cleaning temporary and cache files",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:react\" \"wait-on http://localhost:3000 && NODE_ENV=development electron .\"",
    "dev:react": "vite",
    "build": "vite build",
    "package": "electron-builder"
  },
  "keywords": [
    "electron",
    "cleaner",
    "cache",
    "temp",
    "system-cleaner"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^31.7.5",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "vite": "^5.0.11",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "recharts": "^3.2.1"
  },
  "build": {
    "appId": "com.systemcleaner.app",
    "productName": "System Cleaner",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
